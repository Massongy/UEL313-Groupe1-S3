{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}


{% block content %}

<div class="row">
  {% for link in links %}
    <div class="col-md-4">
      <article class="link-card">
        <h2 class="link-title">
          <a class="linkTitle" href="{{ path('link', { 'id': link.id }) }}">
            {{ link.title }}
          </a>
        </h2>

        <p class="link-desc">{{ link.desc }}</p>

        <div class="link-meta">
          <a class="link-open" href="{{ link.url }}" target="_blank">Open â†’</a>
          <em>(by {{ link.user.username }})</em>
        </div>

        {% if link.tags is not empty %}
          <div class="link-tags">
            {% for tag in link.tags %}
              <a class="tag-pill" href="{{ path('tag', { 'id': tag.id }) }}">
                {{ tag.title }}
              </a>
            {% endfor %}
          </div>
        {% endif %}
      </article>
    </div>
  {% endfor %}
</div>

{% endblock %}